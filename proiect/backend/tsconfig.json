{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",   // <-- This tells TypeScript to use types for Node.js
      "express"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
